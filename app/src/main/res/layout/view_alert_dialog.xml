<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_gray_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alerdialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="30px"
        android:text="委托买入"/>
    <include layout="@layout/menu_devide_line"></include>

    <LinearLayout
        android:id="@+id/alerdialog_ll_content1"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:orientation="horizontal"
        android:layout_marginTop="20px">

        <TextView
            android:id="@+id/alerdialog_tv_msg_title1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:gravity="center_vertical|right"
            android:paddingRight="10px"
            android:textColor="@color/Aluminum"
            android:layout_marginLeft="100px"/>
        <TextView
            android:id="@+id/alerdialog_tv_msg_content1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:paddingLeft="10px"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/alerdialog_ll_content2"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alerdialog_tv_msg_title2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:gravity="center_vertical|right"
            android:paddingRight="10px"
            android:textColor="@color/Aluminum"
            android:layout_marginLeft="100px"/>
        <TextView
            android:id="@+id/alerdialog_tv_msg_content2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:paddingLeft="10px"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/alerdialog_ll_content3"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alerdialog_tv_msg_title3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:gravity="center_vertical|right"
            android:paddingRight="10px"
            android:textColor="@color/Aluminum"
            android:layout_marginLeft="100px"/>
        <TextView
            android:id="@+id/alerdialog_tv_msg_content3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:paddingLeft="10px"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/alerdialog_ll_content4"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:orientation="horizontal"
        android:layout_marginBottom="20px">

        <TextView
            android:id="@+id/alerdialog_tv_msg_title4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:gravity="center_vertical|right"
            android:paddingRight="10px"
            android:textColor="@color/Aluminum"
            android:layout_marginLeft="100px"/>
        <TextView
            android:id="@+id/alerdialog_tv_msg_content4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="24px"
            android:paddingLeft="10px"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alerdialog_ll_content5"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:orientation="horizontal"
        android:layout_marginBottom="20px">

        <TextView
            android:id="@+id/alerdialog_tv_msg_title5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
