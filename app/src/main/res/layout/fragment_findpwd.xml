<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jhs.taolibao.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarLeftImage="@drawable/btn_back"
        app:titleBarTitle="找回密码"></com.jhs.taolibao.view.TitleBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:background="@drawable/shape_white_bg"
        android:orientation="vertical"
        android:paddingBottom="30px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="30px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/Black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_phone_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="输入手机号错误"
                android:textColor="@color/Red"
                android:textSize="32px"
                android:visibility="gone" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:background="@drawable/select_input"
            android:hint="请输入找回手机号"
            android:inputType="phone"
            android:paddingLeft="20px"
            android:textColorHint="@color/Aluminum"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_label_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="验证码"
                    android:textColor="@color/Black"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_code_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:text="请输入密码"
                    android:textColor="@color/Red"
                    android:textSize="32px"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="80px"
                android:layout_marginTop="10px"
                android:layout_weight="2"
                android:background="@drawable/select_input"
                android:hint="请点击获取验证码"
                android:inputType="number"
                android:paddingLeft="20px"
                android:textColorHint="@color/Aluminum"
                android:textSize="32px" />

            <Button
                android:id="@+id/tx_code_time"
                android:layout_width="0dp"
                android:layout_height="80px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:background="@drawable/select_shape_edit_red"
                android:text="获取验证码"
                android:textColor="@color/Red"
                android:textColorHint="@color/Aluminum"
                android:textSize="32px" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">

            <TextView
                android:id="@+id/tv_label_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="新密码"
                android:textColor="@color/Black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_pwd_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="请输入密码"
                android:textColor="@color/Red"
                android:textSize="32px"
                android:visibility="gone" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:background="@drawable/select_input"
            android:hint="请输入6位以上密码"
            android:inputType="textPassword"
            android:paddingLeft="20px"
            android:textColorHint="@color/Aluminum"
            android:textSize="32px" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:background="@drawable/select_btn_submit"
        android:text="确定"
        android:textColor="@color/White"
        android:textSize="36px" />
</LinearLayout>