<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_dapan_rate"
        android:layout_width="35px"
        android:layout_height="35px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px" />

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@id/iv_dapan_rate"

        android:textColor="@color/Aluminum"
        android:textSize="24px" />


    <TextView
        android:id="@+id/tv_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_dapan_rate"
        android:layout_below="@id/iv_dapan_rate"
        android:layout_marginBottom="20px"
        android:layout_marginRight="30px"
        android:layout_marginTop="12px"
        android:textColor="@color/Black"
        android:textSize="30px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_news_content"
        android:layout_marginLeft="30px"
        android:background="@color/Smokey" />

</RelativeLayout>