<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.jhs.taolibao.view.CircleImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px" />

    <TextView
        android:id="@+id/tv_user_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="30px"
        android:layout_toEndOf="@+id/iv_user_icon"
        android:layout_toRightOf="@+id/iv_user_icon"
        android:textColor="@color/Black"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_alias"
        android:layout_below="@+id/tv_user_alias"
        android:layout_marginTop="8px"
        android:text="2小时前"
        android:textColor="@color/Aluminum"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_comment_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_alias"
        android:layout_below="@id/tv_comment_time"
        android:layout_marginBottom="30px"
        android:layout_marginTop="20px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_comment_info"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@color/Smokey"></LinearLayout>

</RelativeLayout>