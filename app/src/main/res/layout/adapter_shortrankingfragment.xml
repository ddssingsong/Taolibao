<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/short_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:text="百事可乐"
            android:textColor="@color/Black"
            android:textSize="30px"
            android:layout_marginLeft="@dimen/padding_left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/padding_left">

            <ImageView
                android:id="@+id/short_adapter_icon"
                android:layout_width="88px"
                android:layout_height="88px"
                android:src="@drawable/img_default_avatar" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="78px"
                android:layout_marginLeft="60px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="守擂"
                    android:textColor="@color/Velvet"
                    android:textSize="24px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/short_adapter_game_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:textColor="@color/Black"
                        android:textSize="32px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:background="@color/Smokey"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="78px"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胜率"
                    android:textColor="@color/Velvet"
                    android:textSize="24px"/>


                <TextView
                    android:id="@+id/short_adapter_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="8:5"
                    android:textColor="@color/Black"
                    android:textSize="32px"/>


            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:background="@color/Smokey"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="78px"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益"
                    android:textColor="@color/Velvet"
                    android:textSize="24px"/>


                <TextView
                    android:id="@+id/short_adapter_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="130000.00"
                    android:textColor="@color/Black"
                    android:textSize="32px"/>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="@dimen/padding_left"
            android:gravity="right">

            <Button
                android:id="@+id/short_adapter_left_btn"
                android:layout_width="340px"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_red_bg"
                android:text="个人信息"
                android:textColor="@color/Red"
                android:textSize="30px"
                android:layout_marginRight="40px"/>

            <View
                android:layout_width="30px"
                android:layout_height="match_parent"
                android:visibility="gone"></View>

            <Button
                android:id="@+id/short_adapter_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectangle_red_bg"
                android:text="偷看持仓"
                android:textColor="@color/Red"
                android:textSize="30px"
                android:layout_marginRight="@dimen/padding_right"
                android:visibility="gone"/>

        </LinearLayout>

        <include layout="@layout/menu_devide_doubleline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"></include>

    </LinearLayout>

    <TextView
        android:id="@+id/short_adapter_tvbg"
        android:layout_width="70px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30px"
        android:background="@drawable/short_adapter_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/White"/>

</RelativeLayout>