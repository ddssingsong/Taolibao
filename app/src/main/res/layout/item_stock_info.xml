<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left"
    android:background="@color/White">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="108px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_stock_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="股票名称"
                android:textColor="@color/Velvet"
                android:textSize="30px"
                />
            <TextView
                android:id="@+id/tv_stock_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="股票代码"
                android:textColor="@color/Velvet"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_stock_profit_loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/Red"
                android:textSize="30px"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/tv_stock_profit_loss_persent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.15%"
                android:textColor="@color/Red"
                android:textSize="24px"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_stock_keep_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/Velvet"
                android:textSize="30px"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_stock_available_persent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.15%"
                android:textColor="@color/Velvet"
                android:textSize="24px"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_stock_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A 股"
                android:textColor="@color/Red"
                android:textSize="30px"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_stock_current_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="54.23"
                android:textColor="@color/Red"
                android:textSize="24px"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>