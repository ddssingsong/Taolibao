<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/White"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buy_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_tab_bug_selector" />

            <View
                android:layout_width="5px"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:id="@+id/buy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textColor="@color/text_bg"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sell_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_tab_sell_selector" />

            <View
                android:layout_width="5px"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:id="@+id/sell_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖出"
                android:textColor="@color/text_bg"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_tab_cancel_selector" />

            <View
                android:layout_width="5px"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="撤单"
                android:textColor="@color/text_bg"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/keep_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_tab_keep_selector" />

            <View
                android:layout_width="5px"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:id="@+id/keep_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持仓"
                android:textColor="@color/text_bg"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selector_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_tab_search_selector" />

            <View
                android:layout_width="5px"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:id="@+id/selector_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textColor="@color/text_bg"
                android:textSize="30px" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>