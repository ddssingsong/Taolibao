<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jhs.taolibao.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarRightImage="@drawable/star_press"
        app:titleBarLeftImage="@drawable/btn_back"
        app:titleBarTitle="修改昵称"></com.jhs.taolibao.view.TitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="30px">

        <EditText
            android:id="@+id/tv_modify_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_edit"
            android:hint="取一个好听的名字"
            android:padding="20px"
            android:maxLength="10"
            android:textColor="@color/Black"
            android:textColorHint="@color/Smokey"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_clear_input" />

    </RelativeLayout>


</RelativeLayout>