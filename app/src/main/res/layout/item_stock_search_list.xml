<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selecter_press"
    android:layout_height="112px">

    <TextView
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="24px"
        android:text="中国核建"
        android:textColor="@color/Black"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_stock_name"
        android:layout_below="@id/tv_stock_name"
        android:layout_marginBottom="20px"
        android:layout_marginTop="10px"
        android:text="SH60161"
        android:textColor="@color/Gunpowder"
        android:textSize="24px" />

    <Button
        android:id="@+id/btn_add_option"
        android:layout_width="128px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_red_edit"
        android:text="+自选"
        android:textColor="@color/Red"
        android:textSize="24px" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30px"
        android:background="@color/Smokey" />

</RelativeLayout>