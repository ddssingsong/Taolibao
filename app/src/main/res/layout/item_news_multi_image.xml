<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selecter_press"
    android:clickable="true"
    android:paddingBottom="20px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="20px">

    <TextView
        android:id="@+id/tv_news_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_news_icon"
        android:layout_toRightOf="@+id/iv_news_icon"
        android:singleLine="true"
        android:text="我是新闻描述啊,你们觉得怎么样啊啊啊啊sd sd sd sd sd s"
        android:textColor="@color/Black"
        android:textSize="30px" />


    <LinearLayout
        android:id="@+id/layout_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_dec"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_image1"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_marginRight="10px"
            android:layout_weight="1"

            />

        <ImageView
            android:id="@+id/iv_news_image2"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_marginRight="10px"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_news_image3"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_images"
        android:layout_marginTop="20px"
        android:text="2小时前"
        android:textColor="@color/Aluminum"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_news_ccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_images"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/tv_news_time"
        android:text="100 评论"
        android:textColor="@color/Aluminum"
        android:textSize="24px" />


</RelativeLayout>